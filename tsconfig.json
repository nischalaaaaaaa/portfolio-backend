{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": ".",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"],
    "baseUrl": "./",
    "paths": {
      "@overnightjs/core": ["node_modules/overnight/dist/core"],
    },
}
  